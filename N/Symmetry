void symmetry(int n) {
    int i,j;
    for(i=0 ; i<n ;i++){
for(j=0;j<=i;j++){
    cout<<"*"<<" ";
}
for(j=0;j<=2*(n-i)-2;j++){
    cout<<"  ";
}
for(j=0;j<=i;j++){
    cout<<"*"<<" ";
}
cout<<endl;
}
//for 2nd half of the pattern
for(i=0 ; i<n-1 ;i++){
for(j=0;j<(n-i)-1;j++){
    cout<<"*"<<" ";
}
for(j=0;j<2*(i+1);j++){
    cout<<"  ";
}
for(j=0;j<(n-i)-1;j++){
    cout<<"*"<<" ";
}
cout<<endl;
    }
}
